%html
  %head
    - if defined?(@title)
      %title= @title
    -else
      %title= controller.controller_name.titleize
    = stylesheet_link_tag :all
    = javascript_include_tag :defaults
    = csrf_meta_tag
  %body
    = render :partial => 'layouts/header'
    = render :partial => 'layouts/alerts'
    #main
      = yield
    = render :partial => 'layouts/footer'
