= form_for @work do |w|
  - @work.errors.full_messages.each do |e|
    = e
  #work
    = w.label :complete
    = w.check_box :complete
  #chapter
    = w.fields_for :chapters, @chapter do |c|
      = c.label :chapter_name
      = c.text_field :chapter_name
      %br
      = c.label :content
      %br
      = c.text_area :content
  = w.submit "Submit"
